# Server
PORT=5000
NODE_ENV=development

# MongoDB Atlas
MONGODB_URI=your_mongodb_atlas_connection_string_here

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
